FROM artixlinux/ft-mips-init

ENV TZ=Europe/Berlin

RUN pacman -Syu \
	&& ln -snf /usr/share/zoneinfo/$TZ /etc/localtime \
	&& cd /root \
	&& git clone https://github.com/st-ty1/Artix_FreshTomato.git \
	&& chmod 711 /root/Artix_FreshTomato/dockerfiles/build_ft-mips-RT.sh

ENTRYPOINT [ "/root/Artix_FreshTomato/dockerfiles/build_ft-mips-RT.sh" ]
